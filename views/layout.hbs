<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Private Registry Manager</title>

    <!-- Bootstrap core CSS -->
    <link href="/webauth-css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/webauth-css/custom.css" rel="stylesheet">

    <script src="/webauth-js/jquery-3.3.1.slim.min.js"></script>
    <script src="/webauth-js/popper.min.js"></script>
    <script src="/webauth-js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">

        <nav class="navbar navbar-expand-lg  navbar-dark bg-primary">
            <a class="navbar-brand" href="/">RegistryManager</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">

                    {{#each menuItems}}
                        <a class="nav-item nav-link {{#if active}}active{{/if}}" href="{{url}}">{{title}}{{#if active}} <span class="sr-only">(current)</span>{{/if}}</a>
                    {{/each}}

                </div>
            </div>
        </nav>

        {{#if error.message}}
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                {{#if error.title}}
                    <strong>{{error.title}}</strong>
                {{/if}}
                {{error.message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        {{/if}}

        {{#if success.message}}
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                {{#if success.title}}
                    <strong>{{success.title}}</strong>
                {{/if}}
                {{success.message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        {{/if}}

        {{{body}}}
    </div>

    <footer class="footer">
        <div class="container">
            <span class="text-muted">Private Registry Manager â€“ <a href="https://github.com/andris9/registry-manager">source code</a></span>
        </div>
    </footer>
</body>

</html>
